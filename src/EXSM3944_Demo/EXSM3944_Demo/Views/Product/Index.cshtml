@model List<Product>
@{
}
<h1>Product Summary - @Model.Count Products</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td><a asp-action="Details" asp-route-id="@product.ID">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@product.ID">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@product.ID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>